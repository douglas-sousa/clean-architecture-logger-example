{
  "compilerOptions": {
    "target": "ES2017",
    "removeComments": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src"
  ]
}